---
export interface Props {
  authors: any;
}
const { authors} = Astro.props;
import authorsData from '../_data/authors.json';
console.log(authorsData);
---
<ul>
  {authors.map((author, i) => (
    <li><a href={"/blog/author/" +  author}><img src={"/img/authors/"+author+".jpg"} alt={author}>{authorsData[author].name}</a></li>
  ))}
</ul>

<style>
li{
  display: inline-block;
  margin-right: 5px;
}

li a{
  text-decoration: none;
  display: flex;
}
img{
  max-width: 24px;
  border-radius: 50%;
  margin-right: 5px;
}
</style>