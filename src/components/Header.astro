---
import logo from "../assets/gotomi-logo.svg?raw";
const { title } = Astro.props;
---

<header>
  <a href="/#top"><div class="logo" set:html={logo} title="gotomi.info" /></a>
  <h2 class="section-title">{title}</h2>
</header>

<style>
  header {
    display: flex;
    align-items: center;
  }

  .logo {
    display: inline-block;

    width: 3rem;
    height: 3rem;
    line-height: 1;

    padding: 0;
    margin: 0.5rem;
  }

  .logo svg {
    max-height: 100%;
  }

  nav {
    justify-self: flex-end;
    padding: 0.5rem 0;
    background-color: rgba(255, 255, 255, 0.3);
  }

  nav ul {
    display: flex;
    text-transform: uppercase;
    font-size: 0.8rem;
  }
  nav li {
    margin: 0 0.5rem;
  }
  nav li::after {
    content: "";
    display: block;
    border-bottom: 2px solid var(--copy-color);
    width: 0px;
    transition: width 0.6s;
  }

  nav li:hover::after {
    width: 100%;
  }

  nav a {
    text-decoration: none;
  }
</style>
