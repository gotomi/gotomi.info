{
  "name": "gotomi_info",
  "version": "2.0.0",
  "description": "gotomi.info homepage",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve:sync": "browser-sync --files 'dist/*' start --server 'dist' --tunnel",
    "build:css": "lessc --autoprefix='last 2 versions' --clean-css='--s1' src/assets/css/style.less  dist/css/style.css && hashmark -s -l 8 -m assets.json dist/css/style.css 'dist/css/{name}{hash}{ext}'",
    "build": " node src/index.js",
    "serve": "cd dist && http-server -p 3003",
    "clean": "rm -rf dist",
    "watch:build": "watch 'npm run build:assets && npm run build:markup' src"
  },
  "author": "Tomasz Gospodarczyk",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.9.11",
    "http-server": "^0.8.5",
    "watch": "^0.16.0"
  },
  "dependencies": {
    "axios": "0.18.0",
    "fs-extra": "5.0.0",
    "hashmark": "^3.0.0",
    "less": "3.0.2",
    "less-plugin-autoprefix": "1.5.1",
    "less-plugin-clean-css": "1.5.1",
    "node-instagram": "4.1.0",
    "pug": "2.0.3",
    "sharp": "0.20.1"
  }
}
